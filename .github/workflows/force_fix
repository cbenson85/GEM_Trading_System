name: Force Fix Catalyst Dates

on:
  workflow_dispatch:

permissions:
  contents: write

jobs:
  force-fix:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v4
    
    - uses: actions/setup-python@v4
      with:
        python-version: '3.11'
    
    - run: pip install requests
    
    - name: Force fix catalyst dates
      env:
        POLYGON_API_KEY: ${{ secrets.POLYGON_API_KEY }}
      run: python force_fix_catalyst_dates.py
    
    - name: Commit results
      run: |
        git config --local user.email "action@github.com"
        git config --local user.name "Bot"
        git add -A
        git diff --staged --quiet || git commit -m "Force fixed catalyst dates"
        git push
